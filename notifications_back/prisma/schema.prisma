generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id          String    @id
  recipientId String
  content     String
  readAt      DateTime?
  mangaSlug   String
  chapter     String
  createdAt   DateTime  @default(now())

  @@index([recipientId])
}

model PushNotificationUrls {
  id          Int    @id @default(autoincrement())
  recipientId String
  url         String
  p256dh      String
  auth        String

  @@index([recipientId])
}
